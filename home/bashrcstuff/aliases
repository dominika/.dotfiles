alias crontab="VIM_CRONTAB=true crontab"

alias b="bundle exec"
alias c="bundle exec rails c 2>/dev/null"
alias zc="RAILS_ENV= zeus c"
alias ap="git pull && bi && mdb"
alias gs="git status"
alias gp="git pull"
alias gd="git diff"
alias gdc="git diff --cached"
alias gai="git add -i"
alias gap="git add -p"
alias gl="git log"
alias gcm="git checkout master"
alias gmm="git merge master"
alias gprune="git remote prune origin"
alias gst="git stash"
__git_complete gst _git_stash
alias jb=jobs
alias l='ls $LS_OPTIONS -lAhF'
alias ls='ls $LS_OPTIONS -hF'
alias ll='ls $LS_OPTIONS -lhF'
alias mdb="bundle exec rake db:migrate && RAILS_ENV=test bundle exec rake db:migrate"
alias pry="bundle exec pry-remote"
alias byebug="byebug -R localhost:8989"
alias q=exit
alias r="bundle exec rails"
alias zs="RAILS_ENV= zeus s puma"
alias s="bundle exec rails s puma"
alias rake="bundle exec rake"
alias routes="bundle exec rake routes"
alias ta="tmux attach -t"
alias v=vim

alias alias_functions="declare -F | grep -v 'declare -f _' | cut -d ' ' -f 3"
